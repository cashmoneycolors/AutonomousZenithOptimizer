{
    "System": {
        "Name": "Autonomous Zenith Optimizer",
        "Version": "2.0.0",
        "Environment": "development",
        "LogLevel": "INFO"
    },
    "Mining": {
        "DefaultAlgorithm": "ethash",
        "DefaultCoin": "ETH",
        "TargetProfitPerMonth": 5000.0,
        "ElectricityCostPerKwh": 0.15,
        "MaxTemperature": 85.0,
        "MinTemperature": 40.0,
        "WalletAddress": "${MINING_WALLET_ADDRESS}"
    },
    "Rigs": [],
    "Market": {
        "PrimaryApi": "coingecko",
        "CacheDurationMinutes": 5,
        "FallbackEnabled": true
    },
    "Backup": {
        "Enabled": true,
        "IntervalHours": 1
    },
    "Logging": {
        "Enabled": true,
        "LogDir": "logs"
    },
    "Pools": {
        "NiceHash": {
            "ApiKey": "${POOLS_NICEHASH_API_KEY}",
            "ApiSecret": "${POOLS_NICEHASH_API_SECRET}",
            "OrganizationId": "${POOLS_NICEHASH_ORG_ID}"
        }
    },
    "Alerts": {
        "Telegram": {
            "Enabled": false,
            "BotToken": "${TELEGRAM_BOT_TOKEN}",
            "ChatId": "${TELEGRAM_CHAT_ID}",
            "AlertTypes": [
                "all"
            ],
            "MinProfitAlert": 50,
            "TemperatureThreshold": 85
        },
        "Discord": {
            "Enabled": false,
            "WebhookUrl": "${DISCORD_WEBHOOK_URL}",
            "AlertTypes": [
                "all"
            ],
            "MinProfitAlert": 50,
            "TemperatureThreshold": 85
        }
    },
    "API": {
        "OpenRouter": { "Enabled": false, "Key": "${OPENROUTER_API_KEY}" },
        "Gemini": { "Enabled": false, "Key": "${GEMINI_API_KEY}" }
    }
}