{
  "System": {
    "Name": "Autonomous Zenith Optimizer",
    "Version": "2.0.0",
    "Environment": "production",
    "LogLevel": "INFO"
  },
  "Mining": {
    "DefaultAlgorithm": "ethash",
    "DefaultCoin": "ETH",
    "TargetProfitPerMonth": 8000.0,
    "ElectricityCostPerKwh": 0.22,
    "MaxTemperature": 80.0,
    "MinTemperature": 45.0,
    "WalletAddress": "${MINING_WALLET_ADDRESS}"
  },
  "Rigs": [],
  "Market": {
    "PrimaryApi": "coingecko",
    "CacheDurationMinutes": 5,
    "FallbackEnabled": true
  },
  "Backup": {
    "Enabled": true,
    "IntervalHours": 6
  },
  "Logging": {
    "Enabled": true,
    "LogDir": "logs"
  },
  "Alerts": {
    "Telegram": {
      "Enabled": false,
      "BotToken": "${TELEGRAM_BOT_TOKEN}",
      "ChatId": "${TELEGRAM_CHAT_ID}",
      "AlertTypes": ["all"],
      "MinProfitAlert": 50,
      "TemperatureThreshold": 80
    },
    "Discord": {
      "Enabled": false,
      "WebhookUrl": "${DISCORD_WEBHOOK_URL}",
      "AlertTypes": ["all"],
      "MinProfitAlert": 50,
      "TemperatureThreshold": 80
    }
  },
  "API": {
    "OpenRouter": { "Enabled": false, "Key": "${OPENROUTER_API_KEY}" },
    "Gemini": { "Enabled": false, "Key": "${GEMINI_API_KEY}" }
  }
}